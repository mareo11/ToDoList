@model IEnumerable<ToDoList.Models.ZadaniaModelcs>

@{
    ViewData["Title"] = "Index";
}

<h1 class="display-4">Lista zadań</h1>

<p>
    <a class = "btn btn-primary" asp-action = "Create">Dodaj zadanie</a>
</p>
<table class="table">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.Nazwa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td style="width:55%">
                @Html.DisplayFor(modelItem => item.Nazwa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            
            <td style="width:45%">
                @Html.ActionLink("Wykonane", "Done", new { id=item.ZadaniaId }, new {@class = "btn btn-success"}) 
                @Html.ActionLink("Edytuj", "Edit", new { id = item.ZadaniaId }, new { @class = "btn btn-warning" }) 
                @Html.ActionLink("Szczegóły", "Details", new { id = item.ZadaniaId }, new { @class = "btn btn-info" }) 
                @Html.ActionLink("Usuń", "Delete", new { id = item.ZadaniaId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
}
    </tbody>
</table>

<p>
    <a class=" btn btn-danger" asp-action="TimedTasks">Zadania po czasie</a>
</p>

<p>
    <a class=" btn btn-dark" asp-action="TasksPerformed">Pokaż wykonane</a>
</p>
