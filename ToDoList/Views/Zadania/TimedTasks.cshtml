@model IEnumerable<ToDoList.Models.ZadaniaModelcs>

@{
    ViewData["Title"] = "TimedTasks";
}

<h1 class="display-4">Zadania po czasie</h1>

<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Nazwa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gotowe)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Nazwa)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Data)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Gotowe)
                </td>

                <td>
                    @Html.ActionLink("Wykonane", "Done", new { id = item.ZadaniaId }, new { @class = "btn btn-success" })
                    @Html.ActionLink("Szczegóły", "Details", new { id = item.ZadaniaId }, new { @class = "btn btn-info" })
                    @Html.ActionLink("Usuń", "Delete", new { id = item.ZadaniaId }, new { @class = "btn btn-danger" })
                </td>

            </tr>
        }
    </tbody>
</table>

<div>
    <a class="btn btn-dark" asp-action="Index">Wróć do listy zadań</a>
</div>